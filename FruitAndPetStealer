    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 50px;
  }

  .title-text {
    color: white;
    font-size: 20px;
    font-weight: bold;
    text-align: center;
    position: absolute;
    top: 15px;
  }

  .button-container {
    margin-top: 20px;
    width: 80%;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .stealer-button {
    background-color: #D3D3D3; /* Default gray color */
    border: 2px solid #696969;
    color: #2F2F2F;
    padding: 10px 20px;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    border-radius: 5px;
    text-align: center;
    transition: background-color 0.3s ease; /* Adds a smooth color transition */
  }

  .stealer-button:hover {
    background-color: #BDBDBD;
  }

  /* CSS classes for the different colors */
  .on {
    background-color: #00A65A; /* Green color for 'on' state */
    color: white;
  }

  .off {
    background-color: #CC0000; /* Red color for 'off' state */
    color: white;
  }
