<body>

<div class="red-background">
  <h2 class="title-text">fruit and pet stealer</h2>
  <div class="button-container">
    <button class="stealer-button" id="petStealerBtn">Pet stealer</button>
    <button class="stealer-button" id="fruitStealerBtn">Fruit stealer</button>
  </div>
</div>

<script>
  // Get references to the buttons
  const petStealerBtn = document.getElementById('petStealerBtn');
  const fruitStealerBtn = document.getElementById('fruitStealerBtn');

  // Add event listeners to each button
  petStealerBtn.addEventListener('click', function() {
    toggleColor(petStealerBtn);
  });

  fruitStealerBtn.addEventListener('click', function() {
    toggleColor(fruitStealerBtn);
  });

  // Function to toggle the colors
  function toggleColor(button) {
    // Check if the button currently has the 'on' class
    if (button.classList.contains('on')) {
      // If it's on, turn it off by removing 'on' and adding 'off'
      button.classList.remove('on');
      button.classList.add('off');
    } else {
      // If it's off (or neither), turn it on by removing 'off' and adding 'on'
      button.classList.remove('off');
      button.classList.add('on');
    }
  }
</script>
</body>
